---
import ThemeIcon from "./ThemeIcon.astro";
const currentPath = Astro.url.pathname;
---

<div>
  <nav class="nav-links">
    <a href="/" class={currentPath === "/" ? "active" : ""}>Home</a>
    <a href="/projects" class={currentPath === "/projects" ? "active" : ""}
      >Projects</a
    >
    <a href="/blog" class={currentPath === "/blog" ? "active" : ""}>Blog</a>
    <a href="/about" class={currentPath === "/about" ? "active" : ""}>About</a>
  </nav>
  <ThemeIcon />
</div>

<style>
  div {
    display: flex;
    justify-content: center;
  }

  html.dark .active {
    color: white;
    border-bottom: 1px solid white;
  }

  .active {
    color: purple;
    border-bottom: 1px solid purple;
    animation: link-animation 2.5s infinite alternate ease-in-out;
  }

  @keyframes link-animation {
    0% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.7;
    }
    100% {
      opacity: 1;
    }
  }
</style>
